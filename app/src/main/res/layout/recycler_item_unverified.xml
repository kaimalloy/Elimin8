<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/month_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUNE"
            android:fontFamily="@font/bariol_regular"
            android:textSize="15sp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/recycle_item_img"
            app:layout_constraintStart_toStartOf="@+id/recycle_item_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:fontFamily="@font/bariol_regular"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/recycle_item_img"
            app:layout_constraintStart_toStartOf="@+id/recycle_item_img"
            app:layout_constraintTop_toBottomOf="@+id/month_lbl" />

        <ImageView
            android:id="@+id/recycle_item_img"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_lbl"
            app:srcCompat="@drawable/scaly" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TableRow
            android:id="@+id/recycle_item_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/recycle_item_food_lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:fontFamily="@font/bariol_regular"
                android:text="Food Name" />

            <TextView
                android:id="@+id/recycle_item_count_lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"/>
        </TableRow>

        <TableRow
            android:id="@+id/recycle_item_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/recycle_item_food_lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:fontFamily="@font/bariol_regular"
                android:text="Food Name" />

            <TextView
                android:id="@+id/recycle_item_count_lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"/>
        </TableRow>

        <TableRow
            android:id="@+id/recycle_item_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/recycle_item_food_lbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:fontFamily="@font/bariol_regular"
                android:text="Food Name" />

            <TextView
                android:id="@+id/recycle_item_count_lbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"/>
        </TableRow>

        <TableRow
            android:id="@+id/recycle_item_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/recycle_item_food_lbl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:fontFamily="@font/bariol_regular"
                android:text="Food Name" />

            <TextView
                android:id="@+id/recycle_item_count_lbl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"/>
        </TableRow>
    </TableLayout>

</LinearLayout>