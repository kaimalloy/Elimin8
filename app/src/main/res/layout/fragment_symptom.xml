<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SymptomFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:gravity="center_vertical"
        android:text="Log your symptoms:"
        android:fontFamily="@font/bariol_regular_italic"
        android:textSize="25sp"
        android:layout_marginLeft="45dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/itchy_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:button="@null"
                    android:background="@drawable/itchy_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Itchy"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/bumpy_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:button="@null"
                    android:background="@drawable/bumpy_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Bumpy"
                    android:textSize="15dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/redness_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:button="@null"
                    android:background="@drawable/redness_btn" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redness"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/scaly_btn"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:button="@null"
                    android:background="@drawable/scaly_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scaly"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"/>

            </LinearLayout>

        </TableRow>


    </TableLayout>
</LinearLayout>